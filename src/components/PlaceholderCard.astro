---
interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<a href="/contribute" class:list={["specimen-card", "opacity-60 hover:opacity-100 transition-opacity duration-300", className]} style="text-decoration: none; color: inherit;">
    <div class="card-header">
        <span>ID: MISSING_DATA</span>
        <span class="text-[var(--accent-neon)] animate-pulse">[OPEN]</span>
    </div>
    <div class="card-visual">
        <div class="visual-grid"></div>
        <div
            class="plush-img flex items-center justify-center text-[var(--accent-neon)] text-6xl opacity-50"
        >
            +
        </div>
    </div>
    <div class="rarity-tag">CONTRIBUTE // ARCHIVE</div>
    <div class="card-footer">
        <span class="specimen-tech">// DATABASE_EXPANSION</span>
        <h2 class="specimen-name">Missing One?</h2>
        <div class="action-row">
            <span style="font-family:'Space Mono'; font-size:0.7rem; color:#555"
                >QTY: âˆž</span
            >
            <span class="btn-archive text-[10px] hover:bg-[var(--accent-neon)] hover:text-black hover:border-[var(--accent-neon)]">ADD PLUSHIE</span>
        </div>
    </div>
</a>
